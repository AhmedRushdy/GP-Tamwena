<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.FinalMSFragment">

    <TextView
        android:id="@+id/tx1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/cairo_regular"
        android:text="تقديم الطلب"
        android:textColor="@color/green"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/back_to_mservice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@id/tx1"
        app:layout_constraintTop_toTopOf="@id/tx1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/cairo_bold"
        android:text="إسم الطلب"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_regular"
        android:layout_marginStart="30dp"
        android:text="تفعيل بطاقه التموين"
        android:textColor="@color/gray"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView15"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toTopOf="@+id/textView15" />

    <EditText
        android:id="@+id/full_name"
        android:layout_width="328sp"
        android:layout_height="48sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_shape3"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/cairo_regular"
        android:hint="الإسم كاملاََ"
        android:inputType="textPersonName"
        android:maxLength="30"
        android:paddingStart="16sp"
        android:paddingEnd="16sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="328sp"
        android:layout_height="48sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:background="@drawable/btn_shape3"
        android:fontFamily="@font/cairo_regular"
        android:hint="رقم البطاقه"
        android:inputType="textPersonName"
        android:backgroundTint="@color/white"
        android:maxLength="30"
        android:paddingStart="16sp"
        android:paddingEnd="16sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/full_name" />

    <EditText
        android:layout_width="328sp"
        android:layout_height="200dp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:background="@drawable/btn_shape3"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/cairo_regular"
        android:hint="برجاء إدخال الشكوى"
        android:inputType="textPersonName"
        android:maxLength="30"
        android:paddingStart="16sp"
        android:gravity="top"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:paddingEnd="16sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/continue_service"
        android:layout_width="328sp"
        android:layout_height="48sp"
        android:layout_marginTop="15sp"
        android:background="@drawable/btn_shape3"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/cairo_regular"
        android:text="إرسال"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>