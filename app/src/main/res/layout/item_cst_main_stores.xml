<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300sp"
    android:layout_marginEnd="5sp"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/item_store_pic"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="5sp"
        android:scaleType="centerCrop"
        android:src="@drawable/mc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/item_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/cairo_bold"
        android:text="ماكدونلدز"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_store_pic" />

    <TextView
        android:id="@+id/item_store_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="10sp"
        android:fontFamily="@font/cairo_light"
        android:text="ش الشقنقيرى بأرض المحلج"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_store_name" />

    <TextView
        android:id="@+id/item_store_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16sp"
        android:fontFamily="@font/cairo_light"
        android:text="متاح الأن"
        android:textColor="@color/green"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/item_store_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/item_store_delay"
        app:layout_constraintTop_toTopOf="@id/item_store_name" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_marginEnd="16sp"
        android:src="@drawable/ic_shipping"
        app:layout_constraintBottom_toBottomOf="@id/item_store_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_store_location" />

    <TextView
        android:id="@+id/item_store_delay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/cairo_light"
        android:text="30min"
        app:layout_constraintBottom_toBottomOf="@id/image_view"
        app:layout_constraintEnd_toStartOf="@id/image_view"
        app:layout_constraintTop_toTopOf="@id/image_view" />

</androidx.constraintlayout.widget.ConstraintLayout>